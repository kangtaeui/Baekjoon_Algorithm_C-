#include <string>
#include <vector>
#include <algorithm>
#include <iostream>

using namespace std;

int solution(vector<int> citations) {
    int answer = 0;
    int num=1;
    int c_size = citations.size();
    sort(citations.begin(), citations.end());
    vector<int> temp;

    for (int i=0; i<c_size-1; i++)
    {
        for(int j=i+1; j<c_size; j++)
        {
            if(citations[i]==0)
            {
                num=0;
                temp.push_back(num);
            }
                
            if(citations[i]<citations[j])
                num++;
            temp.push_back(num);
        }
        if(citations[i]>=num) break;
        num=1;
    }
    answer = temp.back();
    
    return answer;
}
